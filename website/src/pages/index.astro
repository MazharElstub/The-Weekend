---
import MainLayout from '../layouts/MainLayout.astro';

const pageTitle = 'The Weekend | Plan Better Weekends';
const description =
  'The Weekend app helps you coordinate weekends, annual leave, shared calendars, and reminders in one focused iOS app.';
---

<MainLayout title={pageTitle} description={description}>
  <section class="hero" aria-labelledby="hero-title">
    <p class="kicker">The Weekend</p>
    <h1 id="hero-title">A calmer way to organize weekends with people who matter.</h1>
    <p class="lead">
      Plan local or travel time, coordinate shared calendars, and keep holiday windows clear across devices.
      Built for real routines, not spreadsheet chaos.
    </p>
    <div class="cta-row">
      <a class="btn btn-primary" href="/feedback">Share feedback</a>
      <a class="btn btn-secondary" href="/support">Get support</a>
    </div>
  </section>

  <section class="section" aria-labelledby="feature-title">
    <div class="panel">
      <h2 id="feature-title">Core app features</h2>
      <div class="feature-grid">
        <article class="card">
          <h3>Weekend planning view</h3>
          <p>See upcoming and historical weekends in one timeline with clear free/busy status.</p>
        </article>
        <article class="card">
          <h3>Shared calendars</h3>
          <p>Create shared calendars, invite collaborators, and keep everyone aligned on availability.</p>
        </article>
        <article class="card">
          <h3>Leave + holiday support</h3>
          <p>Include annual leave and public-holiday context so your planner reflects real time off.</p>
        </article>
        <article class="card">
          <h3>Account controls</h3>
          <p>Sign in, manage settings, and permanently delete account data directly in-app when needed.</p>
        </article>
      </div>
    </div>
  </section>

  <section class="section" aria-labelledby="start-title">
    <div class="panel">
      <h2 id="start-title">Need help or want a feature?</h2>
      <p>
        Use the feedback form to send support requests, report issues, or suggest improvements.
      </p>
      <div class="cta-row">
        <a class="btn btn-primary" href="/feedback">Open feedback form</a>
      </div>
    </div>
  </section>
</MainLayout>
